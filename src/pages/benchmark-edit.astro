---
import Layout from '../layouts/Layout.astro';
import BenchmarkEditor from '../components/BenchmarkEditor';
---

<Layout title="Benchmark Szerkesztő">
  <div class="page-header" style="margin-bottom: var(--space-xl);">
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <div>
        <h1>Benchmark Szerkesztő</h1>
        <p style="color: var(--color-text-muted); margin: 0;">Termék benchmark adatok szerkesztése.</p>
      </div>
      <a href="/benchmark" class="btn btn-secondary">← Vissza</a>
    </div>
  </div>

  <BenchmarkEditor client:load />
</Layout>
